@model IEnumerable<ConcertDB.DAL.Entities.Tickets>
@{
    ViewData["Title"] = "Index";
}


  <form asp-controller="Tickets" asp-action="Index" method="get">
    <p>
        Id: <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>


<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />

<h1>Boletos</h1>

<p>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="TicketsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsUsed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntranceGate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsUsed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntranceGate)
            </td>
            <td>
                                        @if (item.IsUsed == false)
                                        {
                                            <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-outline-warning">Editar</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-outline-info">Detalles</a>
                                        }
                    
                    
                    </td>
                    </tr>
                      }
                  </tbody>
                 </table>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
  
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                var showModal = "@ViewData["ShowModal"]";
                if (showModal == "True") {
                    alert("Boleta no Valida");
                }
            });
        </script>
    }







